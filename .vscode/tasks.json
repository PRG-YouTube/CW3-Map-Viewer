{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "tsc: watch - tsconfig.json",
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "scss: watch",
			"type": "shell",
			"command": "sass --watch ./style/style.scss ./dist/style/style.css",
			"problemMatcher": [
				"$node-sass"
			],
		}
	]
}